<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="68dp" />

    <ImageView
        android:id="@+id/recipe_box"
        android:layout_width="331dp"
        android:layout_height="131dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/recipe_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_main" />

    <ImageView
        android:id="@+id/dish_img"
        android:layout_width="129dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_box"
        app:layout_constraintEnd_toEndOf="@+id/recipe_box"
        app:layout_constraintTop_toTopOf="@+id/recipe_box"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/breakfast" />

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="French Toast"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/dish_type"
        app:layout_constraintEnd_toStartOf="@+id/dish_img"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="@+id/recipe_box"
        app:layout_constraintTop_toTopOf="@+id/recipe_box"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/dish_diff"
        app:layout_constraintStart_toStartOf="@+id/recipe_box"
        app:srcCompat="@drawable/sand_clock" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        android:src="@drawable/setting"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/title_main"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:text="Recommended"
        android:textColor="@color/darker"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.61" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/recipe_box"
        app:srcCompat="@drawable/tableware" />

    <TextView
        android:id="@+id/dish_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Difficulty"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_box"
        app:layout_constraintEnd_toStartOf="@+id/dish_img"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="@+id/recipe_box" />

    <TextView
        android:id="@+id/dish_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="4dp"
        android:text="Breakfast"
        app:layout_constraintBottom_toTopOf="@+id/dish_prep"
        app:layout_constraintEnd_toStartOf="@+id/dish_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/dish_prep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="16dp"
        android:text="15 min"
        app:layout_constraintBottom_toTopOf="@+id/dish_diff"
        app:layout_constraintEnd_toStartOf="@+id/dish_img"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/btn_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_search"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/homes_icon" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_timer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_home"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <ImageButton
        android:id="@+id/btn_timer"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_search"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

</androidx.constraintlayout.widget.ConstraintLayout>